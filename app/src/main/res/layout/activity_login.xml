<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:id="@+id/linearOneOne"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/logo_image"
        android:layout_gravity="center_horizontal"
        android:layout_width="410.86dp"
        android:layout_height="189.47dp"
        android:layout_marginEnd="1.14dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_image584"/>

    <LinearLayout android:gravity="start"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18.91dp"
        android:layout_marginEnd="31.04dp"
        android:layout_marginStart="32.04dp"
        android:layout_marginTop="34.05dp"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/emailEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="아이디"
            android:inputType="text"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/passwordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:hint="비밀번호"
            android:inputType="numberPassword"
            tools:ignore="TouchTargetSizeCheck" />


        <androidx.appcompat.widget.AppCompatButton
            style="@style/btnSolidRounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginBtn"
            android:id="@+id/loginBtn"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingTop="14.19dp"
            android:paddingBottom="14.19dp"
            android:singleLine="true"
            android:text="로그인"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:orientation="horizontal">

            <ImageView android:id="@+id/imageCheckmark"
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@drawable/img_checkmark"/>

            <TextView
                android:id="@+id/txtThirtyNine"
                android:layout_width="29dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_weight="0.26"
                tools:text="자동 로그인" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.67"
                tools:text="아이디 찾기 | 비밀번호 로그인" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="69dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:src="@drawable/img_image391"/>

            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_marginStart="17dp"
                android:src="@drawable/img_image392"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="17dp"
                android:background="@drawable/rectangle_bg_white_a700_border_gray_301_radius_17_945"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/img_group2251"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_marginStart="17dp"
                android:src="@drawable/img_location_35x35"/>

        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_fingerprint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="0.32"
                tools:text="생체인증"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_weight="0.1"
                tools:text="PIN" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_weight="0.48"
                tools:text="간편비밀번호"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>