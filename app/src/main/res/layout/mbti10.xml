<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/intermedium"
        android:text="이전"
        android:textColor="@color/gray_700"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/mbtip1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:src="@drawable/img_buildings1" />
    <TextView
        android:id="@+id/mbtin1"
        android:layout_below="@+id/mbtip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/dmsansbold"
        android:text="9/12"
        android:textColor="@color/gray_400"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/mbtit1"
        android:layout_below="@+id/mbtin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/dmsansbold"
        android:textStyle="bold"
        android:text="화려한 건축물을 보며"
        android:textColor="@color/gray_800"
        android:textSize="28dp" />
    <View
        android:background="@color/gray_400"
        android:id="@+id/mbtiline1"
        android:layout_below="@+id/mbtit1"
        android:layout_gravity="center_horizontal"
        android:layout_height="5dp"
        android:layout_marginTop="0.95dp"
        android:layout_centerHorizontal="true"
        android:layout_width="260dp"/>
    <TextView
        android:id="@+id/mbtit2"
        android:layout_below="@+id/mbtiline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/dmsansbold"
        android:textStyle="bold"
        android:text="드는 생각은?"
        android:textColor="@color/gray_800"
        android:textSize="28dp" />
    <View
        android:background="@color/gray_400"
        android:id="@+id/mbtiline2"
        android:layout_below="@+id/mbtit2"
        android:layout_gravity="center_horizontal"
        android:layout_height="5dp"
        android:layout_marginTop="0.95dp"
        android:layout_centerHorizontal="true"
        android:layout_width="160dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mbtibtn1"
        style="@style/btnSolidRounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mbtiline2"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_marginStart="32.04dp"
        android:layout_marginEnd="32.04dp"
        android:layout_marginTop="10dp"
        android:paddingTop="14.19dp"
        android:paddingBottom="14.19dp"
        android:singleLine="true"
        android:text="‘어떤 방법으로 지었을까?’"
        android:textSize="18dp"
        android:textAllCaps="false"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mbtibtn2"
        style="@style/btnSolidRounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mbtibtn1"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_marginStart="32.04dp"
        android:layout_marginEnd="32.04dp"
        android:layout_marginTop="11.35dp"
        android:paddingTop="14.19dp"
        android:paddingBottom="14.19dp"
        android:singleLine="true"
        android:text="‘와 멋있다...’"
        android:textSize="18dp"
        android:textAllCaps="false"/>


</RelativeLayout>